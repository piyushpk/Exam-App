<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_exam_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h4"
                    android:text="Exam Name"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1.5"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/txt_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_h2"
                            android:text="By:"
                            android:textColor="@color/colorBlack"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txt_author_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_h3"
                            android:text="Author Name"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_course_name"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        android:text="CA"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorTextFaint"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_total_marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h3"
                    android:text="Total Marks: 100"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txt_max_marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h3"
                    android:text="Max Marks: 20"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h3"
                    android:text="Info"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorFaintBlack"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_releasing_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h4"
                    android:text="Releasing Date"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txt_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h3"
                    android:text="Start Date: 15-07-2017"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txt_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h3"
                    android:text="End Date: 20-08-2017"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_save_rs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_h3"
                        android:text="Save Rs16555"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/txt_rs_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_h3"
                        android:text="Rs 200000"
                        android:textColor="@color/colorFaintBlack"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/txt_rs_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_h3"
                        android:text="18000"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/txt_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_h3"
                        android:text="For 1 Year"
                        android:textColor="@color/colorFaintBlack"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>