<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:elevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_cancel_filled"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_questions"
            android:gravity="center"
            android:textSize="@dimen/text_size_h4"
            android:layout_marginTop="-10dp"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_question_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Q.100"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/colorTextBlack"
                android:theme="@style/EditText1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/img_uploaded6"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_upload_image"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_uploaded5"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_upload_image"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_uploaded4"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_upload_image"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_uploaded3"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_upload_image"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_uploaded2"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_upload_image"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_uploaded1"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_upload_image"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_uplaod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_plus"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sub_question_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:weightSum="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sub_question_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="a)"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_sub_question_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/colorTextBlack"
                android:theme="@style/EditText1"/>

            <TextView
                android:id="@+id/txt_cross_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_weight="0.1"
                android:layout_marginLeft="-15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sub_question_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:weightSum="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sub_question_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="b)"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_sub_question_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/colorTextBlack"
                android:theme="@style/EditText1"/>

            <TextView
                android:id="@+id/txt_cross_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="X"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="-15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sub_question_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:weightSum="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sub_question_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="c)"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_sub_question_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/colorTextBlack"
                android:theme="@style/EditText1"/>

            <TextView
                android:id="@+id/txt_cross_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="X"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="-15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sub_question_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:weightSum="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sub_question_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="d)"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_sub_question_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/colorTextBlack"
                android:theme="@style/EditText1"/>

            <TextView
                android:id="@+id/txt_cross_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="X"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="-15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sub_question_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:weightSum="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sub_question_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="e)"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_sub_question_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/colorTextBlack"
                android:theme="@style/EditText1"/>

            <TextView
                android:id="@+id/txt_cross_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="X"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="-15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sub_question_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:weightSum="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sub_question_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="f)"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_sub_question_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:textSize="@dimen/text_size_h3"
                android:textColor="@color/colorTextBlack"
                android:theme="@style/EditText1"/>

            <TextView
                android:id="@+id/txt_cross_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="X"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="-15dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/green_square_button"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_h3"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>


