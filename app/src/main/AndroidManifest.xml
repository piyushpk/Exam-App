<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.examapplication">

    <application
        android:name=".utility.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateVisible|adjustResize">
        <activity android:name=".ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.LandingStudentActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.DemoActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.SendToLoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.CreateExamActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.LandingFacultyActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>